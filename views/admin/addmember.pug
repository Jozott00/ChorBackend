extends ../layout/main-layout.pug

block content
    main.p-4
        h3 #{editing ? (member.firstname + ' ' + member.name) : "Chormitglied hinzufügen"}
        form(action=editing ? "/manage/chorsetting/edit/" + member.id : "/manage/chorsetting/addmember", method="post", style="width: 50%")
            input(type="hidden" value=csrfToken name="_csrf")
            .form-group.row
                label.col-sm-4.col-form-label(for="firstname") Vorname
                .col-sm-8
                    input.form-control(type="text", name="firstname", value=editing ? member.firstname : "" )
            .form-group.row
                label.col-sm-4.col-form-label(for="name") Nachname
                .col-sm-8
                    input.form-control(type="text", name="name", value=editing ? member.name : "")
            .form-group.row
                label.col-sm-4.col-form-label(for="email") Email
                .col-sm-8
                    input.form-control(type="email", name="email", value=editing ? member.email : "") 
            .form-group.row
                label.col-sm-4.col-form-label(for="phone") Tel.
                .col-sm-8
                    input.form-control(type="text", name="phone", value=editing ? member.phone : "") 
            .form-group.row
                label.col-sm-4.col-form-label(for="catCode") Stimme
                .col-sm-8
                    select.ml-5(name="catCode")
                        option(value="0" selected=editing ? (member.catCode == 0) : false) Sopran
                        option(value="1" selected=editing ? (member.catCode == 1) : false) Alt
                        option(value="2" selected=editing ? (member.catCode == 2) : false) Tenor
                        option(value="3" selected=editing ? (member.catCode == 3) : false) Bass
                        option(value="4" selected=editing ? (member.catCode == 4) : false) Anderes
            button.btn.btn-primary.btn-sm.px-4.mt-4(type="submit" onclick="load()") #{editing ? "Speichern" : "Hinzufügen"}
